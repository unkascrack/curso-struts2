<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />

	<package name="ejercicio36" namespace="/" extends="struts-default">
		<action name="menu">
			<result>/jsp/menu.jsp</result>
		</action>
		
		<action name="multiplefields" class="es.curso.struts2.ejercicio36.actions.MultipleFieldAction">
			<result name="success">/jsp/success.jsp</result>
			<result name="error">/jsp/menu.jsp</result>
			<result name="input">/jsp/menu.jsp</result>
		</action>
	</package>

</struts>
